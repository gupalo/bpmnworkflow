{
    "name": "gupalo/bpmnworkflow",
    "description": "BPMN Workflow",
    "type": "library",
    "license": "GPL-3.0-only",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Gupalo\\BpmnWorkflow\\Tests\\": "tests/",
            "Gupalo\\BpmnWorkflow\\": "src/"
        }
    },
    "require": {
        "php": ">=8.1",
        "ext-simplexml": "^8.0",
        "ext-mbstring": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "platform": {
            "php": "8.1"
        },
        "sort-packages": true
    }
}
